<!DOCTYPE html>
<html lang="en">
<style>
    .goog-logo-link {
        display: none !important;
    }

    .goog-te-gadget {
        color: transparent !important;
    }

    .goog-te-gadget .goog-te-combo {
        color: black !important;
    }
</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!--forawesome-->
    <script src="https://kit.fontawesome.com/d5a2a27062.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/adminStyle.css">
</head>

<body>
    <main>
        <section>
            <h2>Dashboard Overview</h2>
            <div class="total-container">
                <div class="total-container-content">
                    <div class="total-card">
                        <i class="fa-solid fa-chart-line"></i>
                        <div class="total-details">
                            <span>103</span>
                            <p>Registered Users</p>
                        </div>
                    </div>
                    <div class="total-card">
                        <i class="fa-solid fa-chart-line"></i>
                        <div class="total-details">
                            <span>80</span>
                            <p>Active Users</p>
                        </div>
                    </div>
                </div>
                <div class="total-container-content">
                    <div class="total-card">
                        <i class="fa-solid fa-chart-line"></i>
                        <div class="total-details">
                            <span>100</span>
                            <p>Total Deposit</p>
                        </div>
                    </div>
                    <div class="total-card">
                        <i class="fa-solid fa-chart-line"></i>
                        <div class="total-details">
                            <span>90</span>
                            <p>Total Withdrawal</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="preview-container">
                <h2>Reviews</h2>
                <div class="preview-card">
                    <span>Positive Reviews</span>
                    <div class="preview-percent-line">
                        <span></span>
                    </div>
                    <span>80%</span>
                </div>
                <div class="preview-card">
                    <span>Neutral Reviews</span>
                    <div class="preview-percent-line">
                        <span></span>
                    </div>
                    <span>80%</span>
                </div>
                <div class="preview-card">
                    <span>Negative Reviews</span>
                    <div class="preview-percent-line">
                        <span></span>
                    </div>
                    <span>80%</span>
                </div>
                <div class="preview-card total-reviewers">
                    <span>Total Reviewers</span>
                    <span>309</span>
                </div>
            </div>

            <div class="alerts-container">
                <h2>Alerts</h2>

                <div class="total-card">
                    <i class="fa-solid fa-chart-line color-red"></i>
                    <div class="total-details">
                        <span>103</span>
                        <p>Pending Deposit</p>
                    </div>
                </div>
                <div class="total-card">
                    <i class="fa-solid fa-chart-line color-red"></i>
                    <div class="total-details">
                        <span>80</span>
                        <p>Pending Withdrawal</p>
                    </div>
                </div>


                <div class="total-card">
                    <i class="fa-solid fa-chart-line color-red"></i>
                    <div class="total-details">
                        <span>100</span>
                        <p>Failed Deposit</p>
                    </div>
                </div>
                <div class="total-card">
                    <i class="fa-solid fa-chart-line color-red"></i>
                    <div class="total-details">
                        <span>90</span>
                        <p>Failed Withdrawal</p>
                    </div>
                </div>
                <div class="total-card">
                    <i class="fa-solid fa-chart-line color-red"></i>
                    <div class="total-details">
                        <span>90</span>
                        <p>Flagged Account</p>
                    </div>
                </div>

            </div>

        </section>
    </main>



    <script src="/adminScript.js"></script>
</body>

</html>