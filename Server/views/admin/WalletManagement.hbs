<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Wallet Management</title>
    <!--forawesome-->
    <script src="https://kit.fontawesome.com/d5a2a27062.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/adminStyle.css">
</head>

<body>
    <section>
        <header class="wallet-and-account-header"
            style="display: flex; justify-content: space-around; align-items: center; gap:10px; color: #ffffff; width: 100%; padding: 10px; background-color: #711afd;">
            <h4 style="padding: 10px; cursor:pointer;" id="wallet-header">Wallet Adresses</h4>
            <h4 style="padding: 10px; cursor:pointer;" id="account-header">Account Details</h4>
        </header>


        <div id="wallet-section" style="display: flex; flex-direction: column; width: 100%; padding:10px; ">
            <div class="total-plan-container">

                {{#each wallets}}
                <div class="my-wallet">
                    <div class="wallet-details">
                        <p><i class="fa-solid fa-wallet" style="color: #711afd;"> </i>{{this.name}}:</p>
                        <span class="color-gradient" >{{this.address}}</span>
                    </div>
                    <div class="my-plan-buttons">
                        <span class="edit-wallet submit-button" data-id="{{this._id}}">Edit Wallet</span>
                        <span class="delete-wallet submit-button" style="background-color: #D32F2F !important;"
                            data-id="{{this._id}}">Delete Wallet</span>
                    </div>
                </div>
                {{/each}}
            </div>

            <button class="wallet-address submit-button">Add Wallet Adress</button>

            {{!-- Modal for creating/Editing Plans --}}
            <div id="wallet-modal" class="modal hidden" style="z-index: 10000 !important;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 id="wallet-modal-title">Add New Wallet Adress</h3>
                        <i class="fa-solid fa-xmark close-wallet-modal"></i>
                    </div>
                    <form id="Wallet-form">
                        <input type="hidden" id="Wallet-id" name="Wallet-id">
                        <div>
                            <label for="plan-name">Wallet Name:</label>
                            <input type="text" id="wallet-name" name="name" required>
                        </div>
                        <div>
                            <label for="plan-name">Wallet Address:</label>
                            <input type="text" id="wallet-address" name="address" required>
                        </div>
                        <button type="submit" class="submit-button">Save Wallet Adress</button>
                    </form>

                </div>
            </div>
        </div>

        <div id="account-section" style="display: flex; flex-direction: column; width: 100%; padding:10px; ">
            <div class="total-plan-container">

                {{#each accounts}}
                <div class="my-wallet">
                    <div class="wallet-details">
                        <p> <i class="fa-solid fa-bank" style="color: #711afd;"></i>{{this.bankName}}</p>
                        <p><i class="fa-solid fa-wallet" style="color: #711afd;"> </i>{{this.account}}</p>
                        <span class="color-gradient">{{this.number}}</span>
                    </div>
                    <div class="my-plan-buttons">
                        <span class="edit-account submit-button" data-id="{{this._id}}">Edit Account</span>
                        <span class="delete-account submit-button" style="background-color: #D32F2F !important;"
                            data-id="{{this._id}}">Delete Account</span>
                    </div>
                </div>
                {{/each}}
            </div>

            <button class="account-detail submit-button">Add Account</button>

            <div id="account-modal" class="modal hidden">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 id="account-modal-title">Add New Account</h3>
                        <i class="fa-solid fa-xmark close-wallet-modal"></i>
                    </div>
                    <form id="account-form">
                        <input type="hidden" id="account-id" name="account-id">
                        <div>
                            <label for="bankName">Account type:</label>
                            <input type="text" id="bank-name" name="bankName" required>
                        </div>
                        <div>
                            <label for="account">Account Name:</label>
                            <input type="text" id="account-name" name="account" required>
                        </div>
                        <div>
                            <label for="number">Account Number:</label>
                            <input type="number" id="account-number" name="number" required>
                        </div>
                        <button type="submit" class="submit-button">Save Account</button>
                    </form>

                </div>
            </div>
        </div>
    </section>



    <script src="/adminScript.js"></script>
</body>

</html>