<!DOCTYPE html>
<html lang="en">

<head>
    <noscript> Powered by <a href=“https://www.smartsupp.com” target=“_blank”>Smartsupp</a></noscript>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>simplinestle.org | User SETTINGS </title>
    <meta name="theme-color" content="#181818">
    <!--forawesome-->
    <script src="https://kit.fontawesome.com/d5a2a27062.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/loggedInStyle.css">
    <!-- Google Translate script -->
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'en' }, 'google_translate_element');
        }
    </script>
    <script type="text/javascript"
        src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</head>

<body>
    <section>
        <div class="header">
            <a href="/user/Dashboard" class="a color-gradient"> Access Your Dashboard</a>
            <p class="header">PROFILE SETTINGS</p>
        </div>

        <form class="profile-settings-form" action="/user/settings" method="POST" enctype="multipart/form-data">

            <div class="profile-photo-section">
                <img src="{{user.profilePhoto}}" alt="Profile Photo" class="profile-picture" id="profile-photo-preview">
                <label for="profilePhoto" class="upload-photo-label">
                    <i class="fa fa-camera"></i> Change Photo
                    <input type="file" name="profilePhoto" id="profilePhoto" accept="image/*" style="display:none;">
                </label>
            </div>

            <div class="profile-fields">
                <label>
                    Full Name
                    <input type="text" name="name" value="{{user.name}}" required>
                </label>
                <label>
                    <label>
                        User Name
                        <input type="text" name="userName" value="{{user.userName}}" required>
                    </label>
                    <label>
                        Email
                        <input type="email" name="email" value="{{user.email}}" required>
                    </label>
                    <label>
                        Phone Number (start from your country code eg. +61)
                        <input type="tel" name="phoneNumber" value="{{user.phone}}">
                    </label>
                    <label>
                        Bitcoin Wallet
                        <input type="text" name="bitcoinWallet" value="{{user.bitcoinWallet}}">
                    </label>
                    <label>
                        USDT Wallet
                        <input type="text" name="usdtWallet" value="{{user.usdtWallet}}">
                    </label>
                    <label>
                        Ethereum Wallet
                        <input type="text" name="ethereumWallet" value="{{user.ethereumWallet}}">
                    </label>
            </div>
            <div class="profile-fields">
                <label>
                    New Password
                    <input type="password" name="newPassword" autocomplete="new-password">
                </label>
                <label>
                    Confirm New Password
                    <input type="password" name="confirmPassword" autocomplete="new-password">
                </label>
            </div>
            <div class="profile-settings-actions">
                <button type="submit" class="btn green-black-buttons button-size-with-padding">Save
                    Changes</button>
                <a href="/user/dashboard" class="btn yellow-buttons button-size-with-padding">Cancel</a>
            </div>
        </form>
    </section>

    <script src="/script.js"></script>
</body>

</html>