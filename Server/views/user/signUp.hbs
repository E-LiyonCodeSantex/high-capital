    <div class="signing">
        <div class="sign-up-header">
            <div class="signing-header">
                <b>Hello! let's get started</b>
            </div>
            <span class="error-message" id="email-error">{{#if headerError}}{{headerError}}{{else}}&nbsp;{{/if}}</span>

            <div class="have-accont">
                <span>Already have an account?</span>
                <a href="/user/login">SIGN IN</a>
            </div>
        </div>

        <div class="form-container">
            <span>Enter your details below.</span>

            <form id="signup-form" class="signup-form" action="/user/register" method="POST" enctype="multipart/form-data">

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-user sign-up-icon"></i>
                        <input type="text" name="name" id="name" placeholder="Full Name" writingsuggestions="true"
                            value="{{name}}">
                    </div>
                    <span class="error-message" id="name-error">{{#if
                        nameError}}{{nameError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-user sign-up-icon"></i>
                        <input type="text" name="userName" id="username" placeholder="Username"
                            writingsuggestions="true" value="{{userName}}">
                    </div>
                    <span class="error-message" id="username-error">{{#if
                        userNameError}}{{userNameError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-regular fa-envelope sign-up-icon"></i>
                        <input type="text" name="email" id="email" placeholder="Email Address" writingsuggestions="true"
                            value="{{email}}">
                    </div>
                    <span class="error-message" id="email-error">{{#if
                        emailError}}{{emailError}}{{else}}&nbsp;{{/if}}</span>

                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-key sign-up-icon"></i>
                        <input type="password" name="password" id="password" placeholder="Password"
                            writingsuggestions="true" value="{{password}}">
                        <i class="fa-solid fa-eye toggle-password"></i>
                    </div>
                    <span class="error-message" id="strengthMessage">
                        {{#if passwordError}}{{passwordError}}{{else}}&nbsp;{{/if}}
                    </span>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-key sign-up-icon"></i>
                        <input type="password" name="confirmPassword" id="confirm-password"
                            placeholder="Confirm Password" writingsuggestions="true" value="{{confirmPassword}}">
                        <i class="fa-solid fa-eye toggle-password"></i>
                    </div>
                    <span class="error-message">{{#if
                        confirmPasswordError}}{{confirmPasswordError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <div class="input-icon">
                    <i class="fa-solid fa-bitcoin-sign sign-up-icon"></i>
                    <input type="text" name="bitcoinWallet" id="bitcoin-wallet" placeholder="Bitcoin Wallet (Optional)"
                        writingsuggestions="true" value="{{bitcoinWallet}}">
                </div>


                <div class="input-icon">
                    <i class="fa-solid fa-wallet sign-up-icon"></i>
                    <input type="text" name="usdtWallet" id="usdt-wallet" placeholder="USDT Wallet (Optional)"
                        writingsuggestions="true" value="{{usdtWallet}}">
                </div>

                <div class="input-icon">
                    <i class="fa-brands fa-ethereum sign-up-icon"></i>
                    <input type="text" name="ethereumWallet" id="ethereum-wallet"
                        placeholder="Ethereum Wallet (Optional)" writingsuggestions="true" value="{{ethereumWallet}}">
                </div>

                <div class="input-icon">
                    <i class="fa-solid fa-camera sign-up-icon"></i>
                    <input type="file" name="profilePhoto" placeholder="Profile photo (optional)" id="profile-photo"
                        accept="image/*">
                    <span class="error-message">{{#if
                        fileSizeError}}{{fileSizeError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <div class="input-icon">
                    <i class="fa-solid fa-wallet sign-up-icon"></i>
                    <input placeholder="Your Upline: None" disabled>
                </div>
                <div class="terms">
                    <input type="checkbox" id="agree-terms" required>
                    <label for="agree-terms"> I agree with <a href="/user/termOfUse" class="links">Terms and
                            conditions</a></label>
                </div>
                <button type="submit" class="purple--button" id="sign-up-button">REGISTER <i
                        class="fa fa-user-plus"></i></button>
            </form>
            <p class="footer-text">Copyright Â© simplinestle.org. All rights reserved.</p>
        </div>

    </div>



