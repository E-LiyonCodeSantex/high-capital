<!DOCTYPE html>
<html lang="zxx" dir="ltr">
<style>
    .goog-logo-link {
        display: none !important;
    }

    .goog-te-gadget {
        color: transparent !important;
    }

    .goog-te-gadget .goog-te-combo {
        color: black !important;
    }
</style>

<head>
    <!-- Standard Meta -->
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#181818">
    <!-- Site Properties -->
    <title>HHIGH CAPITAL | Register </title>

    <!-- UIkit CSS -->
    <link rel="stylesheet" href="/Uikit/css/uikit.min.css">
    <!-- UIkit JavaScript -->
    <script src="Uikit/js/uikit.min.js"></script>
    <script src="Uikit/js/uikit-icons.min.js"></script>
    <!--forawesome-->
    <script src="https://kit.fontawesome.com/d5a2a27062.js" crossorigin="anonymous"></script>

    <!-- Favicon and apple icon -->
    <link rel="shortcut icon" href="/static/app/images/favicon.54f7c0a8907c.png" type="image/x-icon">
    <link rel="apple-touch-icon-precomposed" href="/static/app/images/favicon.54f7c0a8907c.png">
    <!-- css -->

    <!--for google translator-->
    <script src="https://www.gstatic.com/translate/translate_tts.js"></script>

    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="sign-up-nav">
        <div class="sign-up-header">
            <h3 class="color-gradient">High Capital</h3>
            <div id="google_translate_element"></div>
        </div>
    </div>

    <div class="signing">
        <div class="sign-up-header">
            <h3 style="padding: 0; color: #ffffff;">Hello! let's get started</h3>
            <div class="have-accont">
                <span>Already have an account?</span>
                <a href="/user/login">SIGN IN</a>
            </div>
        </div>

        <div class="form-container">
            <span>Enter your details below.</span>

            <form id="signup-form" class="signup-form" action="/user/register" method="POST"
                enctype="multipart/form-data">
                {{#if ref}}
                <input type="hidden" name="ref" value="{{ref}}">
                {{/if}}
                <span class="error-message" style="" id="email-error">{{#if
                    headerError}}{{headerError}}{{else}}&nbsp;{{/if}}</span>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-user sign-up-icon"></i>
                        <input type="text" name="name" id="name" placeholder="Full Name" writingsuggestions="true"
                            value="{{name}}">
                    </div>
                    <span class="error-message" id="name-error">{{#if
                        nameError}}{{nameError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-user sign-up-icon"></i>
                        <input type="text" name="userName" id="username" placeholder="Username"
                            writingsuggestions="true" value="{{userName}}">
                    </div>
                    <span class="error-message" id="username-error">{{#if
                        userNameError}}{{userNameError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-regular fa-envelope sign-up-icon"></i>
                        <input type="email" name="email" id="email" placeholder="Email Address" writingsuggestions="true"
                            value="{{email}}">
                    </div>
                    <span class="error-message" id="email-error">{{#if
                        emailError}}{{emailError}}{{else}}&nbsp;{{/if}}</span>

                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-key sign-up-icon"></i>
                        <input type="password" name="password" id="password" placeholder="Password"
                            writingsuggestions="true" value="{{password}}">
                        <i class="fa-solid fa-eye toggle-password"></i>
                    </div>
                    <span class="error-message" id="strengthMessage">
                        {{#if passwordError}}{{passwordError}}{{else}}&nbsp;{{/if}}
                    </span>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-key sign-up-icon"></i>
                        <input type="password" name="confirmPassword" id="confirm-password"
                            placeholder="Confirm Password" writingsuggestions="true" value="{{confirmPassword}}">
                        <i class="fa-solid fa-eye toggle-password"></i>
                    </div>
                    <span class="error-message">{{#if
                        confirmPasswordError}}{{confirmPasswordError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-bitcoin-sign sign-up-icon"></i>
                        <input type="text" name="bitcoinWallet" id="bitcoin-wallet"
                            placeholder="Bitcoin Wallet (Optional)" writingsuggestions="true" value="{{bitcoinWallet}}">
                    </div>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-wallet sign-up-icon"></i>
                        <input type="text" name="usdtWallet" id="usdt-wallet" placeholder="USDT Wallet (Optional)"
                            writingsuggestions="true" value="{{usdtWallet}}">
                    </div>
                </div>
                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-brands fa-ethereum sign-up-icon"></i>
                        <input type="text" name="ethereumWallet" id="ethereum-wallet"
                            placeholder="Ethereum Wallet (Optional)" writingsuggestions="true"
                            value="{{ethereumWallet}}">
                    </div>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-camera sign-up-icon"></i>
                        <input type="file" name="profilePhoto" placeholder="Profile photo (optional)" id="profile-photo"
                            accept="image/*">
                        <span class="error-message">{{#if
                            fileSizeError}}{{fileSizeError}}{{else}}&nbsp;{{/if}}</span>
                    </div>
                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-wallet sign-up-icon"></i>
                        <input placeholder="Your Upline: None" disabled>
                    </div>
                </div>

                <div class="terms">
                    <input type="checkbox" id="agree-terms" required>
                    <label for="agree-terms"> I agree with <a href="/web/termOfUse" class="links"
                            style="color: #6608FE; text-decoration:none;">Terms and
                            conditions</a></label>
                </div>
                <button type="submit" class="purple--button" id="sign-up-button">REGISTER <i
                        class="fa fa-user-plus"></i></button>
            </form>
            <p class="footer-text">Copyright Â© High Capital All rights reserved.</p>
        </div>

    </div>



    <script src="/script.js"></script>

    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                { pageLanguage: 'en' },
                'google_translate_element'
            );
        } 
    </script>
    <!-- Google tranlator -->
    <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>

</html>