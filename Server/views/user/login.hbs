<body>
    <div class="signing">
        <div class="sign-up-header">
            <div class="signing-header">
                <b>Welcome</b>
            </div>
            <div class="have-accont">
                <span>Don't have an account?</span>
                <a href="/user/signUp">REGISTER</a>
            </div>
        </div>

        <div class="form-container">
            <span>Enter your details below.</span>
            <form id="signup-form" class="signup-form" action="/user/login" method="POST">
                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-regular fa-envelope sign-up-icon"></i>
                        <input type="text" name="email" id="email" placeholder="Email Address" writingsuggestions="true"
                            value="{{email}}">
                    </div>
                    <span class="error-message" id="email-error">{{#if
                        emailError}}{{emailError}}{{else}}&nbsp;{{/if}}</span>

                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-key sign-up-icon"></i>
                        <input type="password" name="password" id="password" placeholder="Password"
                            writingsuggestions="true">
                        <i class="fa-solid fa-eye toggle-password"></i>
                    </div>
                    <span class="error-message">{{#if
                        passwordError}}{{passwordError}}{{else}}&nbsp;{{/if}}</span>
                </div>

                <p class='text-warning'><a href="/user/passwordReset">Forgot Password?</a></p>
                <button type="submit" class="purple--button" id="sign-up">SIGN IN <i class="fa fa-sign-in"></i></button>
            </form>

            <p>Copyright Â© simplinestle.org. All rights reserved.</p>
            <p class="footer-text">
                <a href="/user/about">About Us</a>
                <a href="/user/termOfUse">Terms And Conditions</a>
            </p>
        </div>

    </div>


