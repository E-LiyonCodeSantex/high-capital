<!DOCTYPE html>
<html lang="zxx" dir="ltr">
<style>
    .goog-logo-link {
        display: none !important;
    }

    .goog-te-gadget {
        color: transparent !important;
    }

    .goog-te-gadget .goog-te-combo {
        color: black !important;
    }
</style>

<head>
    <!-- Standard Meta -->
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#181818">
    <!-- Site Properties -->
    <title>HIGH CAPITAL | login </title>

    <!-- UIkit CSS -->
    <link rel="stylesheet" href="/Uikit/css/uikit.min.css">
    <!-- UIkit JavaScript -->
    <script src="Uikit/js/uikit.min.js"></script>
    <script src="Uikit/js/uikit-icons.min.js"></script>
    <!--forawesome-->
    <script src="https://kit.fontawesome.com/d5a2a27062.js" crossorigin="anonymous"></script>

    <!-- Favicon and apple icon -->
    <link rel="shortcut icon" href="/static/app/images/favicon.54f7c0a8907c.png" type="image/x-icon">
    <link rel="apple-touch-icon-precomposed" href="/static/app/images/favicon.54f7c0a8907c.png">
    <!-- css -->

    <!--for google translator-->
    <script src="https://www.gstatic.com/translate/translate_tts.js"></script>

    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <div class="sign-up-nav">
        <h3 class="color-gradient">High Capital</h3>
        <div id="google_translate_element"></div>
    </div>

    <div class="signing">
        <div class="sign-up-header">
            <h3 style="padding: 0; color: #ffffff;">Login Here:</h3>
            <div class="have-accont">
                <span>Don't have an account?</span>
                <a href="/user/signUp">SIGN UP</a>
            </div>
        </div>

        <div class="form-container">
            <span>Enter your details below.</span>
            <form id="signup-form" class="signup-form" action="/user/login" method="POST">
                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-regular fa-envelope sign-up-icon"></i>
                        <input type="email" name="email" id="email" placeholder="Email Address"
                            writingsuggestions="true" value="{{email}}">
                    </div>
                    <span class="error-message" id="email-error">{{#if
                        emailError}}{{emailError}}{{else}}&nbsp;{{/if}}</span>

                </div>

                <div class="formDetails">
                    <div class="input-icon">
                        <i class="fa-solid fa-key sign-up-icon"></i>
                        <input type="password" name="password" id="password" placeholder="Password"
                            writingsuggestions="true">
                        <i class="fa-solid fa-eye toggle-password"></i>
                    </div>
                    <span class="error-message">{{#if
                        passwordError}}{{passwordError}}{{else}}&nbsp;{{/if}}</span>
                </div>
                <p class='text-warning'><a href="/user/passwordReset"
                        style="color: #6608FE; text-decoration:none;">Forgot Password?</a></p>
                <button type="submit" class="purple--button" id="sign-up">SIGN IN <i class="fa fa-sign-in"></i></button>
            </form>

            <p class="footer-text">Copyright Â© High Capital All rights reserved.</p>

        </div>


        <script src="/script.js"></script>

        <script type="text/javascript">
            function googleTranslateElementInit() {
                new google.translate.TranslateElement(
                    { pageLanguage: 'en' },
                    'google_translate_element'
                );
            } 
        </script>
        <!-- Google tranlator -->
        <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>

</html>